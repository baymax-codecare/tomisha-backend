{{#> layout}}
  {{#*inline "content"}}
    <p class="message mb-md">
      Hallo {{firstName}} {{lastName}},
      <br />
      <br />
      du hast eine Anfrage von Bujar Islami erhalten für eine Referenzbestätigung.
    </p>

    <div class="card mb-md">
      <div class="avatar">
        <img src="{{picture}}" />
      </div>
      <div class="body">
        <div class="card-title">{{invitor}}</div>
      </div>
    </div>

    <a href="{{tokenUrl}}" target="_blank" class="btn">
      Referenz bestätigen
    </a>
  {{/inline}}
{{/layout}}